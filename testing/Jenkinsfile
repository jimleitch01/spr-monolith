pipeline {
    agent none
    stages {
        stage('Tests') {
            
            parallel {
                stage('JaCoCo') {
                    agent {
                        label "maven"
                    }
                    steps {
                        // checkout scm
                        sh "mvn -B -s /usr/share/maven/ref/repository/settings-docker.xml jacoco:report-aggregate"
                    }
                    // post {
                    //     always {
                    //         junit "**/TEST-*.xml"
                    //     }
                    // }
                }
                stage('sureFire') {
                    agent {
                        label "maven"
                    }
                    steps {
                        // checkout scm
                        sh "mvn -B -s /usr/share/maven/ref/repository/settings-docker.xml surefire:test"
                    }
                    // post {
                    //     always {
                    //         junit "**/TEST-*.xml"
                    //     }
                    // }
                }
                stage('jMeter') {
                    agent {
                        label "maven"
                    }
                    steps {
                        // checkout scm
                        sh "sleep 15"
                    }
                    // post {
                    //     always {
                    //         junit "**/TEST-*.xml"
                    //     }
                    // }
                }
            }
        }
    }
}




