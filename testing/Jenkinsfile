pipeline {
    agent none
    stages {
        stage('Init Tests') {
            parallel {
                stage('JaCoCo Testing') {
                    agent {
                        label "maven"
                    }
                    steps {
                        sh "mvn -B -s /usr/share/maven/ref/repository/settings-docker.xml jacoco:report-aggregate"
                    }
                    // post {
                    //     always {
                    //         junit "**/TEST-*.xml"
                    //     }
                    // }
                }
                stage('Surefiretests') {
                    agent {
                        label "maven"
                    }
                    steps {
                        sh "mvn -B -s /usr/share/maven/ref/repository/settings-docker.xml surefire:test"
                    }
                    // post {
                    //     always {
                    //         junit "**/TEST-*.xml"
                    //     }
                    // }
                }
            }
        }
    }
}




